<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cjj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <material.danny_jiang.com.mcoypulltorefresh.view.WaveView
        android:id="@+id/draweeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />


    <material.danny_jiang.com.mcoypulltorefresh.view.RoundDotView
        android:id="@+id/round1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" />


    <material.danny_jiang.com.mcoypulltorefresh.view.RoundProgressView
        android:id="@+id/round2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" />

    <material.danny_jiang.com.mcoypulltorefresh.view.RippleView
        android:id="@+id/ripple"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>